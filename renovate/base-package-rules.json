{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "packageRules": [
        {
            "automerge": true,
            "matchCurrentVersion": "/^0\\./",
            "matchUpdateTypes": ["patch"],
            "platformAutomerge": true
        },
        {
            "automerge": true,
            "matchCurrentVersion": ">=1.0.0",
            "matchUpdateTypes": ["minor", "patch"],
            "platformAutomerge": true
        }
    ]
}